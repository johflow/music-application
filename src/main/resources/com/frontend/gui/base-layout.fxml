<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<BorderPane stylesheets="@base.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frontend.gui.BaseController">
    
    <center>
        <BorderPane fx:id="contentArea" minHeight="400" minWidth="600">
         <center>
            <ListView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center></BorderPane>
    </center>
    
    <bottom>
        <HBox fx:id="navBar" alignment="CENTER" spacing="10" styleClass="nav-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="discoverBtn" text="Discover" onAction="#handleDiscover" styleClass="nav-button"/>
            <Button fx:id="profileBtn" text="Profile" onAction="#handleProfile" styleClass="nav-button"/>
            <Button fx:id="createBtn" text="Song" onAction="#handleSong" styleClass="nav-button"/>
            <Button fx:id="settingsBtn" text="Settings" onAction="#handleSettings" styleClass="nav-button"/>
        </HBox>
    </bottom>
    
</BorderPane>
