<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.frontend.gui.SettingsController"
      stylesheets="@settings.css">
    
    <left>
        <VBox spacing="15" styleClass="sidebar" minWidth="200">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label styleClass="title" text="Account Details"/>
            
            <VBox spacing="5">
                <Label fx:id="usernameLabel" styleClass="settingLabel" text="Username: "/>
                <Label fx:id="passwordLabel" styleClass="settingLabel" text="Password: Secret"/>
                <Label fx:id="emailLabel" styleClass="settingLabel" text="E-Mail: "/>
                <Label fx:id="themeLabel" styleClass="settingLabel" text="Theme: "/>
            </VBox>
            
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="profileImageView" fitHeight="150" fitWidth="150" preserveRatio="true">
                </ImageView>
                <Button fx:id="changePhotoButton" text="Change photo" onAction="#handleChangePhoto"/>
            </VBox>
        </VBox>
    </left>
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Settings" styleClass="pageTitle"/>
            
            <GridPane vgap="15" hgap="10" alignment="CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <!-- Bio -->
                <Label text="Bio:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="formLabel"/>
                <TextArea fx:id="bioTextArea" prefHeight="100" prefWidth="400" wrapText="true" editable="true"
                          GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                
                <!-- Change Username -->
                <Label text="Change Username:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="formLabel"/>
                <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                
                <!-- Change Password -->
                <Label text="Change Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="formLabel"/>
                <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <!-- Change E-Mail -->
                <Label text="Change E-Mail:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="formLabel"/>
                <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                
                <!-- Change Theme -->
                <Label text="Change Theme:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="formLabel"/>
                <ComboBox fx:id="themeComboBox" prefWidth="400" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
            
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="saveButton" text="Save" onAction="#handleSave" styleClass="primaryButton"/>
            </HBox>
            
            <Label fx:id="statusLabel" styleClass="statusLabel"/>
        </VBox>
    </center>
    
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="footer">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            <Button fx:id="signOutButton" text="Sign Out" onAction="#handleLogout" styleClass="dangerButton"/>
        </HBox>
    </top>
    
</BorderPane> 