<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.frontend.gui.SignupController"
      alignment="CENTER"
      spacing="10"
      stylesheets="@signup.css">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Sign Up" styleClass="title"/>
    
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    
    <Label fx:id="errorLabel" styleClass="error" visible="false"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Sign Up" onAction="#handleSignup" styleClass="signup-button"/>
        <Button text="Back to Login" onAction="#navigateToLogin" styleClass="login-button"/>
    </HBox>
    
</VBox> 