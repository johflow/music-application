<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>

<BorderPane
    xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.frontend.gui.DiscoverController"
    stylesheets="@discover.css">

    <!-- Top bar with a title -->
    <top>
        <HBox spacing="10" styleClass="content-area" alignment="CENTER_LEFT">
            <Label text="Discover" styleClass="title"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Main list of songs -->
    <center>
        <ListView fx:id="songListView"
                  prefWidth="600"
                  prefHeight="400"
                  styleClass="content-area"/>
    </center>
</BorderPane>
